pipeline{
    agent{label 'None'}
    stages{
        stage('scm'){
            steps{
                git 'https://github.com/wakaleo/game-of-life.git' 
            }
        }
        stage('build'){
            steps{
                sh script: 'mvn clean package'
            }
        }
        stage('post build'){
            steps{
                junit 'gameoflife-web/target/surefire-reports/*.xml'
                artifact 'gameoflife-web/target/*.war'
            }
        }
    }
}